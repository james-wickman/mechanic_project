<ul>
	<% @available_array.each_with_index do |available, i| %>
		<% if available[:available] == 1%>
		 	<li class="selected" data-time="<%=@hours_in_day[i]%>" data-id="<%= available[:id]%>"><%=@hours_in_day[i]%></li>
		 <% elsif available[:available] == 0 %>
			<li class="unselected" data-time="<%=@hours_in_day[i]%>"><%=@hours_in_day[i]%></li>
		<% elsif available[:available] == 2 %>
			<div id="accordion" role="tablist" aria-multiselectable="true">
		        <a class="full_width mechanic_customers" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= i %>" aria-expanded="true" aria-controls="collapse<%= i %>">
					<%=@hours_in_day[i] %>
				</a>
		    </div>
		    <div id="collapse<%= i %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= i %>">
		      <div class="card-bl">
				Lorem ipsum dolor sit amet, consectetur adipisicing elit. In ipsum accusamus officia impedit possimus dolorum praesentium quas molestias est porro distinctio, cumque nobis sunt tempora quam voluptatibus deserunt debitis aperiam?
		      </div>
		    </div>
		<% end %> 
	<% end %>
</ul>