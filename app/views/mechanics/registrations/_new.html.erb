<h2>Sign up Mech</h2>
<% resource_name = :mechanic %>
<% resource = Mechanic.new %>
<% devise_mapping = Devise.mappings[:mechanic] %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "new_mechanic_form", :"data-parsley-validate" => ""}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "2", required:"" %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "2", required:"" %>
  </div>
  <div class="field">
    <%= f.label :email %><div class="hidden" id="mechanic_loading"><div class="mechanic_check_animation loading"></div>
  <p class="mechanic_please_wait"> Please Wait</p></div>
    <br />
    <%= f.email_field :email, id: 'mechanic_email', "data-parsley-remote" => "/home/unique_mechanic_email?email={value}", "data-parsley-remote-validator" => 'mechanic_email_unique', class: 'form-control email', "data-parsley-trigger" => "change", required:"" %>
  </div>
  <div class="field">
    <%= f.label :home_shop_address %><br />
    <%= f.text_field :home_shop_address, class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "3", required:"" %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "3", required:"" %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "2", required:"" %>
  </div>
  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip, class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "5", required:"" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <br />
    <%= f.password_field :password, autocomplete: "off", id: 'mechanic_signup_password', class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-minlength" => "7", required:"" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', "data-parsley-trigger" => "change", "data-parsley-equalto" => "#mechanic_signup_password", 'data-required': "true" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


