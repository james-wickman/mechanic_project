

<%= form_for vehicles_create_path(@new_vehicle), html: { method: :post } do |f| %>
	<br>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="field">
    <%= f.select :type, [ 'motocycle', 'truck', 'motorcycle', 'atv', 'boat' ], :prompt => 'Select One' %>
  </div><br>
  <div class="field">
    <%= f.label :make %><br />
    <%= f.text_field :make, autofocus: true %>
  </div><br>
  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div><br>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>